// 颜色定义
$color-orange = #1989fc
$color-main = #000
$color-sub = #333

$color-red = #ff525d

// 字体定义
$size-main = 32rpx
$size-sub = 28rpx

// 阴影
$box-shadow = 0px 4px 20px 0px rgba(0,0,0,0.4)

// flex布局相关

flex-center()
  display flex
  align-items center
  justify-content center

flex-space-between()
  display flex
  align-items center
  justify-content space-between

flex-column()
  display flex
  flex-direction column